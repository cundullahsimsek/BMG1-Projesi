<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chooseActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arka_plan"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.app.alisverissepeti.activity.CategoryChoose">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:background="#fff">
        <TextView
            android:id="@+id/selected_product"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="aaa"
            android:textSize="20dp" />
        <Button
            android:layout_width="0dp"
            android:text="@string/back"
            android:id="@+id/backButton"
            android:background="@drawable/custom_button_home"
            android:layout_height="37dp"
            android:layout_weight="1.3"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:layout_marginRight="5dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="#9FA8DA"
        android:gravity="center"
        android:text="@string/category_choose"
        android:textSize="19dp" />
    <GridView
        android:padding="10dp"
        android:id="@+id/grid_view_adapter"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="#EEEEEE"
        android:columnWidth="100dp"
        android:gravity="center"
        android:horizontalSpacing="12dp"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="20dp" />
</LinearLayout>